    }

    #reviewAndPayment, #confirmation {
        background: #e9e9e978;
        padding: 29px;
        border-radius: 20px;
    }

    .addon-card {
        position: relative;
    }

        .addon-card .form-check-input {
            right: 14px;
        }

    .addguest_title {
        font-size: 14px;
        width: 100%;
        padding: 11px 0 14px 17px;
        border-bottom: #ccc solid 1px;
    }

    .card1 {
        border: 1px solid #ddd;
        border-radius: 12px;
        padding: 0 0 16px 0;
