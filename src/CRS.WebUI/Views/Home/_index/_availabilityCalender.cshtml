@model CRS.Infrastructure.ViewModels.Rooms.RoomsViewModel

@{
    if (Model != null && Model.RoomCalenderPrices != null)
    {
        foreach (var item in Model.RoomCalenderPrices)
        {
            <div class="date-item">
                <span>@item?.Date?.ToString("ddd")</span><br>
                <span class="">@item?.Date?.ToString("dd") @item?.Date?.ToString("MMM")</span><br>
                <span class="text-success">₹@(item?.Price?.ToString("N0") ?? "0.00")</span><br>
