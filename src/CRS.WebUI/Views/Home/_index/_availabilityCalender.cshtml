                        {
                            <span style="color:red">Sold Out</span>
                        }
                        else if (item?.RoomsAvailable == 1)
                        {
                            <span>1 Room</span>
                        }
                        else
                        {
                            <span>@item?.RoomsAvailable Rooms</span>
                        }

