        <p> <i class="fas fa-phone me-2"></i>+91 11 42661122 <br> <i class="fas fa-envelope me-2"></i>reservations@itchotels.in  </p>
        <a href="booking.html" class="roomDetails_btn">Book Now</a>
    </div>

    <script>
        function showHotelDetails(hotelName) {
            const hotelData = {
                "Hotel Sunshine": {
                    description: "A luxurious hotel with stunning city views.",
                    features: [
                        { text: "Free Wi-Fi", icon: "fas fa-wifi" },
                        { text: "Swimming Pool", icon: "fas fa-swimmer" },
                        { text: "24/7 Room Service", icon: "fas fa-concierge-bell" }
                    ]
                },
                "Grand Palace": {
                    description: "Experience royal treatment at this grand hotel.",
                    features: [
                        { text: "Spa", icon: "fas fa-spa" },
                        { text: "Fine Dining", icon: "fas fa-utensils" },
                        { text: "Conference Rooms", icon: "fas fa-chalkboard-teacher" }
                    ]
                },
                "Ocean View Resort": {
                    description: "Relax by the ocean with beautiful sunset views.",
                    features: [
                        { text: "Beach Access", icon: "fas fa-umbrella-beach" },
                        { text: "Water Sports", icon: "fas fa-water" },
                        { text: "Family Friendly", icon: "fas fa-child" }
                    ]
                }
            };

            const details = hotelData[hotelName];
            if (details) {
                document.getElementById('hotelName').innerText = hotelName;
                document.getElementById('hotelDescription').innerText = details.description;

                const featuresList = document.getElementById('hotelFeatures');
                featuresList.innerHTML = '';
                details.features.forEach(feature => {
                    const li = document.createElement('li');
                    li.className = 'list-group-item d-flex align-items-center';
                    li.innerHTML = `<i class="${feature.icon} me-2"></i> ${feature.text}`;
                    featuresList.appendChild(li);
                });

                document.getElementById('hotelDetails').classList.add('active');
                document.getElementById('overlay').classList.add('active');
            }
        }

        function closeHotelDetails() {
            document.getElementById('hotelDetails').classList.remove('active');
            document.getElementById('overlay').classList.remove('active');
        }
    </script>

