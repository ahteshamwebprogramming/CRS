    <script>
        let roomCount = 1;

        // Function to toggle the popup
        function togglePopup() {
            let popup = document.getElementById("popup");
            popup.style.display = (popup.style.display === "block") ? "none" : "block";
        }

        // Function to update adult and children count
        function updateCounter(button, type, change) {
            let counterSpan = button.parentElement.querySelector('.' + type);
            let counterSpanAdult = button.parentElement.parentElement.querySelector('.adults');
            let counterSpanChildred = button.parentElement.parentElement.querySelector('.children');
            let currentValue = parseInt(counterSpan.innerText);
            let currentValueAdult = parseInt(counterSpanAdult.innerText);
            let currentValueChildred = parseInt(counterSpanChildred.innerText);
            let newValue = currentValue + change;

            if (type === 'adults' && newValue < 1) return; // Minimum 1 adult per room
            if (type === 'adults' && newValue > 3) return; // Maximum 3 adult per room
            if (type === 'children' && newValue < 0) return; // Minimum 0 children per room
            if (type === 'children' && newValue > 2) return; // Minimum 0 children per room

            if (type === 'children' && currentValueAdult == 3 && newValue > 1) return; // Minimum 0 children per room
            if (type === 'adults' && currentValueChildred == 2 && newValue > 2) return; // Minimum 0 children per room

            counterSpan.innerText = newValue;
            updateSummary();
        }

        // Function to add a new room
        function addRoom() {
            roomCount++;

            if (roomCount > 5) {
                return;
            }

            let roomsDiv = document.getElementById('rooms');

            let newRoom = document.createElement('div');
            newRoom.classList.add('room');
            newRoom.innerHTML = `
                                                                                                                                                                                                                                                                                                                                                                                                                                                                <span>Room ${roomCount}</span>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                <div class="counter">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <button onclick="updateCounter(this, 'adults', -1)">−</button>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <span class="adults">1</span>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <button onclick="updateCounter(this, 'adults', 1)">+</button>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                <div class="counter">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <button onclick="updateCounter(this, 'children', -1)">−</button>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <span class="children">0</span>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <button onclick="updateCounter(this, 'children', 1)">+</button>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                            `;
            roomsDiv.appendChild(newRoom);
            updateSummary();
        }

        // Function to update summary text
        function updateSummary() {
            let adults = 0, children = 0;
