    <script>
           let roomCount = 1;


    function togglePopup() {
        const popup = document.getElementById("popup");
        popup.style.display = (popup.style.display === "block") ? "none" : "block";
    }


          function updateCounter(button, type, change) {
        const roomElement = button.closest('.room');
        const adultSpan = roomElement.querySelector('.adults');
        const childSpan = roomElement.querySelector('.children');

        let adults = parseInt(adultSpan.innerText);
        let children = parseInt(childSpan.innerText);

        if (type === 'adults') {
            let newAdults = adults + change;
            if (newAdults < 1 || newAdults > 3 || (newAdults + children > 3)) return;
            adultSpan.innerText = newAdults;
        }

        if (type === 'children') {
            let newChildren = children + change;
            if (newChildren < 0 || newChildren > 2 || (adults + newChildren > 3)) return;
            childSpan.innerText = newChildren;
        }

        updatePaxData();
        updateSummaryDisplay();

       
        if (Object.keys(RoomSelections).length > 0) {
            SummaryPartialView();
        }
    }

        function updateSummaryDisplay() {
        let totalAdults = 0;
        let totalChildren = 0;

        PaxData.forEach(room => {
            totalAdults += room.Adults;
            totalChildren += room.Children;
        });

        const summaryText = `${totalAdults} Adult${totalAdults !== 1 ? 's' : ''}, ${totalChildren} Child${totalChildren !== 1 ? 'ren' : ''}`;
        $("#selectionSummary").text(summaryText);
    }
        function updateRoomSelectionsWithPax() {
        Object.keys(RoomSelections).forEach(roomTypeId => {
            RoomSelections[roomTypeId].Adults = PaxData.Adults;
            RoomSelections[roomTypeId].Children = PaxData.Children;
        });

      
        if (Object.keys(RoomSelections).length > 0) {
            SummaryPartialView();
        }
    }
    
    function addRoom() {
        if (roomCount >= 5) return;
        roomCount++;

        const roomsDiv = document.getElementById('rooms');
        const newRoom = document.createElement('div');
        newRoom.className = 'room';
        newRoom.innerHTML = `
            <span>Room ${roomCount}</span>
            <div class="counter">
                <span class="userPerson">Adults</span>
                <button onclick="updateCounter(this, 'adults', -1)">−</button>
                <span class="adults">1</span>
                <button onclick="updateCounter(this, 'adults', 1)">+</button>
            </div>
            <div class="counter">
                <span class="userPerson">Children</span>
                <button onclick="updateCounter(this, 'children', -1)">−</button>
                <span class="children">0</span>
                <button onclick="updateCounter(this, 'children', 1)">+</button>
            </div>
        `;
        roomsDiv.appendChild(newRoom);
        updateSummary();
    }

    // Update the selection summary text
    function updateSummary() {
        let totalAdults = 0;
        let totalChildren = 0;

        document.querySelectorAll('.adults').forEach(span => {
            totalAdults += parseInt(span.innerText);
        });
        document.querySelectorAll('.children').forEach(span => {
            totalChildren += parseInt(span.innerText);
        });

        document.getElementById("selectionSummary").innerText =
            `${totalAdults} Adult${totalAdults > 1 ? 's' : ''}, ${totalChildren} Child${totalChildren > 1 ? 'ren' : ''}`;
    }

    // Close popup when clicking outside
    document.addEventListener("click", function (event) {
        const popup = document.getElementById("popup");
        const buttons = document.querySelectorAll(".person_filled_button");

        if (!popup.contains(event.target) && ![...buttons].some(btn => btn.contains(event.target))) {
            popup.style.display = "none";
        }
    });

    </script>



    

