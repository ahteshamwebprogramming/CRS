    <!-- Hotel Details Section -->
    <div id="hotelDetails">
        <img src="https://www.itchotels.com/content/dam/itchotels/in/umbrella/itc/hotels/sheraton-new-delhi/images/overview-landing-page/overview/desktop/hotel-facade.jpg" class="card-img-top" alt="Ocean View Resort">
        <span class="close-btn" onclick="closeHotelDetails()">&times;</span>
        <h2 id="hotelName">Hotel Details</h2>
        <p id="hotelDescription">Select a hotel to view its details.</p>
        <ul id="hotelFeatures" class="list-group">
            <!-- Features will be dynamically added here -->
        </ul>
