@model CRS.Infrastructure.ViewModels.Summary.SummaryViewModel
<style>
    .service-details p {
        margin: 0;
    }

    .service-details {
        display: flex;
        justify-content: space-between;
    }

    .amount {
        font-weight: 700;
        color: #000;
    }

    
</style>
<style>

    .applycoupon {
        --border: #e6e8ef;
        --surface: #fff;
        --ink: #0f172a;
        margin-top: 1.5rem;
        padding: 1.2rem;
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

        .applycoupon h3 {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--ink);
        }

        .applycoupon .row {
            display: flex;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
        }

        .applycoupon .input {
            flex: 1;
            padding: 0.8rem 1rem;
            border-radius: 10px;
            border: 1px solid var(--border);
            font-size: 1rem;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            .applycoupon .input:focus {
                border-color: #4f46e5; /* Indigo tone */
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.2);
                outline: none;
            }

        .applycoupon .btn {
            padding: 0.8rem 1.2rem;
            border-radius: 10px;
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
        }

    #applyCoupon {
        background: #4f46e5;
        color: #fff;
    }

        #applyCoupon:hover {
            background: #4338ca;
            transform: scale(1.03);
        }

    #removeCoupon {
        background: #f3f4f6;
        color: #374151;
    }

        #removeCoupon:hover {
            background: #e5e7eb;
            transform: scale(1.03);
        }


</style>
<div class="">
    @* <div class="header">
        <div class="text-start">
            CHECK IN <br />
            <span class="date">@Model?.SummaryInputDTO?.CheckInDate?.ToString("dd MMM, yyyy")</span>
        </div>
        <div class="nights">@Model?.SummaryInputDTO?.NoOfNights Night</div>
        <div class="text-end">
            CHECK OUT <br />
            <span class="date">@Model?.SummaryInputDTO?.CheckOutDate?.ToString("dd MMM, yyyy")</span>
        </div>
    </div> *@

    @if (Model?.SummaryInputDTO?.SelectedRooms?.Any() == true)
    {
        decimal totalRoomCharges = 0;
        decimal taxRate = 0.05m;

        foreach (var room in Model.SummaryInputDTO.SelectedRooms)
        {
            decimal pricePerNight = room.Price;
            int nights = Model.SummaryInputDTO.NoOfNights ?? 1;
            int quantity = room.NoOfRooms;

            decimal roomTotal = pricePerNight * nights * quantity;
            totalRoomCharges += roomTotal;

            <div class="room-title">@room.Rtype</div>
            <div class="price-details">
                $@pricePerNight /Night x @quantity room(s) x @nights night(s)
                <span class="amount">$@roomTotal.ToString("0.00")</span>
            </div>
            <p><strong>Guest:</strong> @room.Adults Adult(s), @room.Children Children(s)</p>
            <hr />
        }


        decimal totalServiceCharges = 0;
        if (Model?.SummaryInputDTO?.SelectedServices?.Any() == true)
        {
            <div class="service-section">
                <h5>Selected Services</h5>
                @foreach (var service in Model.SummaryInputDTO.SelectedServices)
                {
                    totalServiceCharges += service.Price;
                    <div class="service-details">
                        <p>@service.Service</p>
                        <span class="amount">$@service.Price.ToString("0.00")</span>
                    </div>
                }
                <hr />
            </div>
        }

        var tax = (totalRoomCharges + totalServiceCharges) * taxRate;
        var grandTotal = totalRoomCharges + totalServiceCharges + tax;

        <div class="price-details">
            Total Room Charges <span class="amount">$@totalRoomCharges.ToString("0.00")</span>
        </div>
        @if (totalServiceCharges > 0)
        {
            <div class="price-details">
                Total Service Charges <span class="amount">$@totalServiceCharges.ToString("0.00")</span>
            </div>
        }
        <div class="price-details">
            Total Taxes <span class="amount">$@tax.ToString("0.00")</span>
        </div>

        <hr />

        <div class="total">
            Total Price <span class="amount">$@grandTotal.ToString("0.00")</span>
        </div>

        <section class="applycoupon">
            <h3>Apply Coupon</h3>
            <div class="row">
                <input class="input" id="coupon" placeholder="Enter coupon (e.g., WELCOME10)">
                <button class="btn" id="applyCoupon">Apply</button>
                <button class="btn" id="removeCoupon" aria-label="Remove coupon" title="Remove coupon">Remove</button>
            </div>
        </section>


    }
    else
    {
        <p>No room selected yet.</p>
    }

    @* <a href="#" onclick="submitPaxDataAjax()" class="button">Review booking</a> *@
</div>
