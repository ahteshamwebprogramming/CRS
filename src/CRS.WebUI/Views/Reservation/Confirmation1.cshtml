@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CRS.Infrastructure.Models.Masters.BookingReviewViewModel

<title>Hotel Room Reservation - Review & Payment</title>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style type="text/css">
    .bg-primary {
        background: #7b584f !important
    }

    .btn-primary, .btn-success {
        background: #7b584f !important;
        padding: 15px 22px !important;
        border: 0;
    }

    .summary-section {
        background: #e9e9e978;
        padding: 29px;
        border-radius: 20px;
        margin-bottom: 20px;
    }

    .summary-card {
        border: 1px solid #ddd;
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        background-color: #fff;
    }

    .summary-header {
        background: #d3c2bd63;
        color: black;
        padding: 12px 16px;
        font-size: 18px;
        margin: -16px -16px 16px -16px;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        border-bottom: #ccc solid 1px;
    }

    .guest-details-row {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 10px;
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
    }

    .guest-info {
        flex: 1;
        min-width: 200px;
        padding: 0 10px;
    }

    .price-details {
        border-top: 2px solid #7b584f;
        padding-top: 15px;
        margin-top: 15px;
    }

    .price-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
    }

    .total-row {
        font-weight: bold;
        font-size: 18px;
        border-top: 1px solid #ddd;
        padding-top: 10px;
        margin-top: 10px;
    }

    .payment-options {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 20px;
    }

    .payment-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        flex: 1;
        min-width: 250px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .payment-card:hover {
            border-color: #7b584f;
            background-color: #f9f9f9;
        }

        .payment-card.selected {
            border-color: #7b584f;
            background-color: #f3e8e6;
        }
</style>

<div class="container">
    <h2 class="text-center">Review Your Reservation</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="summary-section">
                <!-- Guest Summary -->
                <div class="summary-card">
                    <div class="summary-header">
                        Guest Summary
                    </div>

                    <div class="guest-details-row">
                        <div class="guest-info">
                          @*   <strong>Contact Information</strong><br>
                            @Model?.Booking?.Email<br>
                            @Model?.Booking?.PhoneNumber *@
                        </div>
                    </div>

                    <div class="guest-details-row">
                        <div class="guest-info">
                          @*   <strong>Address</strong><br>
                            @Model?.Booking?.Address<br>
                            @Model?.Booking?.City, @Model?.Booking?.Country @Model?.Booking?.ZipCode *@
                        </div>
                    </div>

                    <div class="guest-details-row">
                        <div class="guest-info">
                            <strong>Guests</strong>
                        </div>
                    </div>

                   @*  @{
                        if (Model != null && Model.Booking != null && Model.Booking.Guests != null)
                        {
                            int i = 1;
                            foreach (var item in Model.Booking.Guests)
                            {
                                <div class="guest-details-row">
                                    <div class="guest-info">
                                        <strong>Guest @(i + 1)</strong><br>
                                        @item?.FirstName @item?.LastName<br>
                                        @item?.Gender, @item?.Age years old
                                    </div>
                                </div>
                                i += 1;
                            }
                        }
                    } *@
                </div>

                <!-- Payment Method -->
                <div class="summary-card">
                    <div class="summary-header">
                        Payment Method
                    </div>

                    <div class="payment-options">
                        <div class="payment-card" onclick="selectPayment(this, 'creditCard')">
                            <h5>Credit Card</h5>
                            <p>Pay securely with credit card</p>
                        </div>

                        <div class="payment-card" onclick="selectPayment(this, 'paypal')">
                            <h5>PayPal</h5>
                            <p>Pay with your PayPal account</p>
                        </div>

                        <div class="payment-card" onclick="selectPayment(this, 'bankTransfer')">
                            <h5>Bank Transfer</h5>
                            <p>Direct bank transfer</p>
                        </div>
                    </div>

                    <div id="creditCardForm" style="display: none; margin-top: 20px;">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="cardNumber">Card Number</label>
                                <input type="text" class="form-control" id="cardNumber" placeholder="Enter card number">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="expiryDate">Expiry Date</label>
                                <input type="text" class="form-control" id="expiryDate" placeholder="MM/YY">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="cvv">CVV</label>
                                <input type="text" class="form-control" id="cvv" placeholder="CVV">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="cardholderName">Cardholder Name</label>
                                <input type="text" class="form-control" id="cardholderName" placeholder="Enter cardholder name">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Booking Summary -->
            <div class="summary-section">
                <div class="summary-header">
                    Booking Summary
                </div>

                <div>
                    @* <strong>@ViewBag?.RoomType</strong><br>
                    @ViewBag?.CheckInDate?.ToString("MMM dd, yyyy") - @ViewBag?.CheckOutDate?.ToString("MMM dd, yyyy")<br>
                    @ViewBag?.Nights night(s), @ViewBag?.TotalPax guest(s) *@
                </div>

                <div class="price-details">
                    <div class="price-row">
                        <span>Room rate</span>
                        <span>@ViewBag?.RoomRate.ToString("C")</span>
                    </div>

                   @*  @if (ViewBag?.Packages != null)
                    {
                        foreach (var package in ViewBag.Packages)
                        {
                            <div class="price-row">
                                <span>@package.Name</span>
                                <span>@package.Price.ToString("C")</span>
                            </div>
                        }
                    } *@

                   @*  <div class="price-row">
                        <span>Taxes & Fees</span>
                        <span>@ViewBag?.Taxes?.ToString("C")</span>
                    </div>

                    <div class="price-row total-row">
                        <span>Total</span>
                        <span>@ViewBag?.TotalAmount?.ToString("C")</span>
                    </div> *@
                </div>

                <div class="form-check mt-3">
                    <input type="checkbox" class="form-check-input" id="termsAgreement">
                    <label class="form-check-label" for="termsAgreement">
                        I agree to the terms and conditions
                    </label>
                </div>

                <button id="confirmBookingBtn" class="btn btn-primary btn-block mt-3" disabled
                        onclick="confirmBooking()">
                    Confirm Booking
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    let selectedPaymentMethod = '';

    function selectPayment(element, method) {
        // Remove selected class from all payment cards
        document.querySelectorAll('.payment-card').forEach(card => {
            card.classList.remove('selected');
        });

        // Add selected class to clicked card
        element.classList.add('selected');
        selectedPaymentMethod = method;

        // Show/hide credit card form
        const creditCardForm = document.getElementById('creditCardForm');
        if (method === 'creditCard') {
            creditCardForm.style.display = 'block';
        } else {
            creditCardForm.style.display = 'none';
        }

        validateForm();
    }

    function validateForm() {
        const termsAgreed = document.getElementById('termsAgreement').checked;
        const confirmBtn = document.getElementById('confirmBookingBtn');

        if (selectedPaymentMethod && termsAgreed) {
            confirmBtn.disabled = false;
        } else {
            confirmBtn.disabled = true;
        }
    }

    function confirmBooking() {
        // Add your booking confirmation logic here
        alert('Booking confirmed! Thank you for your reservation.');
        // Typically you would submit a form or make an AJAX call here
    }

    // Add event listener for terms checkbox
    document.getElementById('termsAgreement').addEventListener('change', validateForm);
</script>